var bd:BitmapData = new BitmapData(10, 10, true, BLACK);const RED:uint = 0xFFFF0000;const WHITE:uint = 0xFFFFFFFF;const BLACK:uint = 0xFF000000;var headX:int = 4, headY:int = 4;var timer:Timer = new Timer(2000);timer.addEventListener(TimerEvent.TIMER, wipeDeadCells);bd.setPixel32(headX, headY, RED);timer.start();addEventListener(MouseEvent.CLICK, togglePixel);var sp:Sprite = new Sprite();sp.addChild(new Bitmap(bd));addChild(sp);height = 600;scaleX = scaleY;function wipeDeadCells(event:Event):void {	bd.floodFill(headX, headY, WHITE);	bd.threshold(bd, bd.rect, bd.rect.topLeft, "!=", WHITE, BLACK, WHITE, true);	bd.floodFill(headX, headY, RED);}function togglePixel(event:Event = null):void {	var indexX:int = int(mouseX), indexY:int = int(mouseY);	if (indexX == headX && indexY == headY) return;	bd.setPixel32(indexX, indexY, bd.getPixel32(indexX, indexY) == RED ? BLACK : RED);}